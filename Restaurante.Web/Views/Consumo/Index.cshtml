@model IEnumerable<Restaurante.Domain.Entities.Consumo>

<h2 class="text-center">Consumos</h2>
<p class="d-block text-right">
    @Html.ActionLink("Adicionar Consumo", "Create", new {}, new { @class = "btn btn-outline-info" })
</p>
<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>Restaurante</th>
            <th>Valor</th>
            <th>Data</th>
            <th>Ações</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.id</th>
                <td>@item.restaurante</td>
                <td>@item.valor</td>
                <td>@item.data</td>
                <td class="text-center">
                    <a class="btn btn-outline-success" 
                        asp-controller="Consumo" 
                        asp-action="View" 
                        asp-route-id="@item.id"><i class="fas fa-eye"></i></a>

                    <a class="btn btn-outline-primary mx-2" 
                        asp-controller="Consumo" 
                        asp-action="Update" 
                        asp-route-id="@item.id"><i class="fas fa-edit"></i></a>

                    <a class="btn btn-outline-danger" 
                        asp-controller="Consumo" 
                        asp-action="Delete" 
                        asp-route-id="@item.id"><i class="fas fa-trash-alt"></i></a>
                </td>
            </tr>
        }
        @if (!Model.Any())
        {
            <td colspan="7" class="text-center"> Nenhum registro cadastrado </td>
        }
    </tbody>
</table>