@model IEnumerable<Restaurante.Domain.Entities.Restaurante>

<h2 class="text-center">Restaurante</h2>
<p class="d-block text-right">
    @Html.ActionLink("Adicionar Restaurante", "Create", new {}, new { @class = "btn btn-outline-info" })
</p>
<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Endereço</th>
            <th>Bairro</th>
            <th>Cidade</th>
            <th>Estado</th>
            <th>Ações</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.id</th>
                <td>@item.nome</td>
                <td>@item.bairro</td>
                <td>R$ @item.cidade</td>
                <td>@item.estado</td>
                <td class="text-center">
                    <a class="btn btn-outline-success" 
                        asp-controller="Restaurante" 
                        asp-action="View" 
                        asp-route-id="@item.id"><i class="fas fa-eye"></i></a>

                    <a class="btn btn-outline-primary mx-2" 
                        asp-controller="Restaurante" 
                        asp-action="Update" 
                        asp-route-id="@item.id"><i class="fas fa-edit"></i></a>

                    <a class="btn btn-outline-danger" 
                        asp-controller="Restaurante" 
                        asp-action="Delete" 
                        asp-route-id="@item.id"><i class="fas fa-trash-alt"></i></a>
                </td>
            </tr>
        }
        @if (!Model.Any())
        {
            <td colspan="7" class="text-center"> Nenhum registro cadastrado </td>
        }
    </tbody>
</table>

@if (Model.Any())
{
    <div class="row">
        <div class="col-sm-6">
            <div class="card">
                <h5 class="card-header">Menor Consumo</h5>
                <div class="card-body">
                    <div class="form-group col-12">
                     <div class="editor-label">
                            Nome
                        </div>
                        <div class="editor-field">
                            <input type="text" value="@ViewBag.menorConsumo.nome" class="form-control" disabled/>
                        </div>
                    </div>

                        <div class="editor-label">
                            Endereço
                        </div>
                        <div class="editor-field">
                            <input type="text" value="@ViewBag.menorConsumo.endereco" class="form-control" disabled/>
                        </div>
                    </div>

                    <div class="form-group col-12">
                        <div class="editor-label">
                            Bairro
                        </div>
                        <div class="editor-field">
                            <input type="text" value="@ViewBag.menorConsumo.bairro" class="form-control" disabled/>
                        </div>
                    </div>

                    <div class="form-group col-12">
                        <div class="editor-label">
                            Cidade
                        </div>
                        <div class="editor-field">
                            <input type="text" value="R$ @ViewBag.menorConsumo.cidade" class="form-control" disabled/>
                        </div>
                    </div>

                    <div class="form-group col-12">
                        <div class="editor-label">
                            Estado
                        </div>
                        <div class="editor-field">
                            <input type="text" value="@ViewBag.menorConsumo.estado" class="form-control" disabled/>
                        </div>
                    </div>
                    </div>
                </div>
            </div>
        <div class="col-sm-6">
            <div class="card">
                <h5 class="card-header">Maior Consumo</h5>
                <div class="card-body">
                    <div class="form-group col-12">
                        <div class="editor-label">
                            Nome
                        </div>
                        <div class="editor-field">
                            <input type="text" value="@ViewBag.maiorConsumo.nome" class="form-control" disabled/>
                        </div>
                    </div>

                    <div class="form-group col-12">
                        <div class="editor-label">
                            Endereço
                        </div>
                        <div class="editor-field">
                            <input type="text" value="@ViewBag.maiorConsumo.endereço" class="form-control" disabled/>
                        </div>
                    </div>

                    <div class="form-group col-12">
                        <div class="editor-label">
                            Bairro
                        </div>
                        <div class="editor-field">
                            <input type="text" value="R$ @ViewBag.maiorConsumo.bairro" class="form-control" disabled/>
                        </div>
                    </div>

                    <div class="form-group col-12">
                        <div class="editor-label">
                            Cidade
                        </div>
                        <div class="editor-field">
                            <input type="text" value="@ViewBag.maiorConsumo.cidade.ToString("dd/MM/yyyy")" class="form-control" disabled/>
                        </div>
                    </div>

                    <div class="form-group col-12">
                        <div class="editor-label">
                            Estado
                        </div>
                        <div class="editor-field">
                            <input type="text" value="@ViewBag.maiorConsumo.estado" class="form-control" disabled/>
                        </div>
                    </div>
                </div>
            </div>
        </div>
}