@model Restaurante.Domain.Entities.Restaurante

<h2 class="text-center">Contas de Luz</h2>

<div class="form-group col-12 col-sm-8 col-md-6 mx-auto">
    <div class="editor-label">
        Consumo
    </div>
    <div class="editor-field">
        <select class="form-control" name="consumo.id" required>
            <option value="" disabled>Selecione o Consumo</option>
            @foreach(var consumo in ViewBag.Consumos)
            {
                <option value="@consumo.id" selected="@(@consumo.id == Model.consumo.id)" |  @consumo.valor | @consumo.data</option>
            }
        </select>   
    </div>
</div>

<div class="form-group col-12 col-sm-8 col-md-6 mx-auto">
    <div class="editor-label">
        Nome
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.nome, new { htmlAttributes = new { @class = "form-control"} })
        <small class="form-text text-muted">@Html.ValidationMessageFor(model => model.nome)</small>
    </div>
</div>

